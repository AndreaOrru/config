# Modified commands.
alias ls='/usr/bin/lsd'
alias diff='diff --color=auto'
alias mkdir='mkdir -p'

# New commands.
alias f='sudo updatedb && sudo locate -i'
alias i='ipython3'
alias open='xdg-open'
alias p='paru'
alias t='tmux'
alias ta='tmux attach'

# Arch things.
alias upgrade='p -Syu && p -Scc --noconfirm && rm -rf ~/.cache/paru'
alias depclean='p -Qdttq | xargs -p paru -Rns --noconfirm'

# Emacs.
alias e='TERM=tmux-direct emacsclient -t'
alias "e."='e . ..'

# Git.
alias git='hub'
alias gpush="git push -u origin \`git rev-parse --abbrev-ref HEAD\`"
alias 'g..'='cd $(git root)'

# Monitor control.
alias workpc='sudo modprobe i2c-dev && sudo ddcutil setvcp 0x60 0x31'
