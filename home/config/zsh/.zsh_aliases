# Modified commands.
alias diff='diff --color=auto'
alias mkdir='mkdir -p'

# New commands.
alias f='sudo updatedb && sudo locate -i'
alias fd='fdfind'
alias i='ipython3'
alias open='xdg-open'
alias t='tmux'

# Apt.
alias upgrade='sudo apt update && sudo apt full-upgrade && sudo apt autoremove && sudo apt clean'

# Emacs.
alias e='TERM=tmux-direct emacsclient -t'
alias "e."='e . ..'

# Git.
alias git='hub'
alias gpush="git push -u origin \`git rev-parse --abbrev-ref HEAD\`"
alias 'g..'='cd \`git root\`'
